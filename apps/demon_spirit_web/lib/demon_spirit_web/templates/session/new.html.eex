<div class="row">
  <div class="col-sm-8 col-sm-offset-2 text-center">
    <h1>Welcome!</h1>
    Please log in as a guest account.
    <%= form_for @guest, Routes.session_path(@conn, :create), fn f -> %>
      <%= label f, :name %>
      <%= text_input f, :name, placeholder: "Name", autofocus: true, required: true, class: 'form-control' %>
      <%= error_tag f, :name %>
      <%= submit "Log In As Guest", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

